{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "precommit": "node localizeLanguage.js && lint-staged && flow",
    "flow": "flow",
    "format": "import-sort -l --write 'packages/*/*.js' 'packages/*/src/**/*.js'; prettier-eslint --write 'packages/*/*.js' 'packages/*/src/**/*.js' localizeLanguage.js",
    "lint": "eslint 'packages/*/*.js' 'packages/*/src/**/*.js'",
    "prepare": "lerna exec yarn prepare"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "css-module-flow": "^1.0.0",
    "eslint": "^6.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.2",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-babylon": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "lerna": "^3.16.4",
    "lint-staged": "^8.0.4",
    "prettier-eslint-cli": "^5.0.0"
  },
  "resolutions": {
    "scrypt.js": "0.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "importSort": {
    ".js, .es": {
      "parser": "babylon",
      "style": "module"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "import-sort -l --write",
        "prettier-eslint --write",
        "git add"
      ]
    },
    "ignore": [
      "flow-typed/**"
    ]
  }
}
